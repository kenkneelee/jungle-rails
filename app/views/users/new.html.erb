<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Signup!</h1>
      <%= form_for :user, url: '/users', class: "mt-3" do |f| %>
        <div class="mb-3">
          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
        </div>
        <div class="mb-3">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, "Email" %>
          <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "Password Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
